<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Trees -->

<ThingDef ParentName="TreeBase">
    <defName>Plant_SmallGuldenTree</defName>
    <label>Small Gulden Tree</label>
    <description>A large conifer covered with prickly pine cones. It grows in a distinctive conical shape.</description>
    <graphicData>
      <texPath>Plants/SmallGuldenTree</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <statBases>
      <Beauty>8</Beauty>
      <BeautyOutdoors>8</BeautyOutdoors>
    </statBases>
    <ingestible />
    <plant>
      <growDays>20</growDays>
      <harvestedThingDef>WoodLog</harvestedThingDef>
      <visualSizeRange>1.0~2.5</visualSizeRange>
      <harvestWork>800</harvestWork>
      <harvestYield>27</harvestYield>
    </plant>
  </ThingDef>

